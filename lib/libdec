CE="\033[0m"
RS="\033[1;31m"
YS="\033[1;33m"

if [[ $EUID -ne 0 ]]
then
   sleep 1
   echo -e "["$RS"*"$CE"] "$RS"This script must be run as "$YS"root"$RS"!"$CE"" 1>&2
   sleep 1
   exit
fi

{
CONF="$( cat /root/hacktestkit/etc/.config )"
cd /etc/hacktestkit
chattr -i /etc/hacktestkit
chattr -i /etc/hacktestkit/login
openssl enc -aes-256-cbc -base64 -pass pass:"$CONF" -d -p -in login -out login.dec
if [[ "$(cat login.dec)" = "" ]]
then
rm login.dec
else
rm login
mv login.dec login
fi
chattr +i /etc/hacktestkit/login
chattr -i /etc/hacktestkit/password
openssl enc -aes-256-cbc -base64 -pass pass:"$CONF" -d -p -in password -out password.dec
if [[ "$(cat password.dec)" = "" ]]
then
rm password.dec
else
rm password
mv password.dec password
fi
chattr +i /etc/hacktestkit/password
chattr -i /etc/hacktestkit/root
chattr -i /etc/hacktestkit/root/password
cd /etc/hacktestkit/root
openssl enc -aes-256-cbc -base64 -pass pass:"$CONF" -d -p -in password -out password.dec
if [[ "$(cat password.dec)" = "" ]]
then
rm password.dec
else
rm password
mv password.dec password
fi
chattr +i /etc/hacktestkit/root/password
chattr +i /etc/hacktestkit/root
chattr +i /etc/hacktestkit
} &> /dev/null
