CE="\033[0m"
RS="\033[1;31m"
YS="\033[1;33m"

if [[ $EUID -ne 0 ]]
then
   sleep 1
   echo -e "["$RS"*"$CE"] "$RS"This script must be run as "$YS"root"$RS"!"$CE"" 1>&2
   sleep 1
   exit
fi

{
chattr +i /etc/hacktestkit/.config
chattr +i /etc/hacktestkit
chattr +i /root/hacktestkit/etc
chattr +i /root/hacktestkit/etc/.config
} &> /dev/null
