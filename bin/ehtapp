#        along with this program.  If not, see <http://www.gnu.org/licenses/>.

CE="\033[0m"
RS="\033[1;31m"
YS="\033[1;33m"
N="\033[1;37m"

if [[ $EUID -ne 0 ]]
then
   sleep 1
   echo -e "["$RS"*"$CE"] "$RS"This script must be run as "$YS"root"$RS"!"$CE"" 1>&2
   sleep 1
   exit
fi

if [[ $1 = "--help" || $1 = "-h" ]]
then
echo -e "Usage: ehtapp [OPTION...]"
echo -e "Copyright (C) 2015, Entynetproject. All Rights Reserved."
echo -e
echo -e "   -c  --create            Create hacktestkit application."
echo -e "   -d  --desktop <option>  Create/remove hacktestkit desktop application." 
echo -e "   -r  --remove            Remove hacktestkit application."
echo -e "   -h  --help              Give this help list."
exit

elif [[ $1 = "--create" || $1 = "-c" ]]
then
if [[ -f /usr/share/applications/hacktestkit.desktop ]]
then
sleep 2
echo -e "Error, hacktestkit application is already created!"
sleep 2
exit
else
sleep 2
cp /root/hacktestkit/app/hacktestkit.desktop /usr/share/applications
chmod +x /usr/share/applications/hacktestkit.desktop
echo -e "Success, hacktestkit application created!"
sleep 2
exit
fi
fi

if [[ $1 = "--desktop" || $1 = "-d" ]]
then
if [[ $2 = "" ]]
then
echo -e "Usage: ehtapp $1 <option>"
exit
fi
if [[ $2 = "create" ]]
then
if [[ -f /root/Desktop/hacktestkit.desktop ]]
then
sleep 2
echo -e "Error, hacktestkit desktop application is already created!"
sleep 2
exit
else
sleep 2
cp /root/hacktestkit/app/hacktestkit.desktop /root/Desktop
chmod +x /root/Desktop/hacktestkit.desktop
echo -e "Success, hacktestkit desktop application created!"
sleep 2
exit
fi
fi
if [[ $2 = "remove" ]]
then
if [[ -f /root/Desktop/hacktestkit.desktop ]]
then
sleep 2
rm /root/Desktop/hacktestkit.desktop
echo -e "Success, hacktestkit desktop application removed!"
sleep 2
else
sleep 2
echo -e "Error, hacktestkit desktop application is not created!"
sleep 2
exit
fi
fi
fi

if [[ $1 = "--remove" || $1 = "-r" ]]
then
if [[ -f /usr/share/applications/hacktestkit.desktop ]]
then
sleep 2
rm /usr/share/applications/hacktestkit.desktop
echo -e "Success, hacktestkit application removed!"
sleep 2
else
sleep 2
echo -e "Error, hacktestkit application is not created!"
sleep 2
exit
fi
fi

echo -e "Usage: ehtapp [OPTION...]"
echo -e "Copyright (C) 2015, Entynetproject. All Rights Reserved."
echo -e
echo -e "   -c  --create            Create hacktestkit application."
echo -e "   -d  --desktop <option>  Create/remove hacktestkit desktop application."
echo -e "   -r  --remove            Remove hacktestkit application."
echo -e "   -h  --help              Give this help list."
exit
