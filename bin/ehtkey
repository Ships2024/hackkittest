CE="\033[0m"
RS="\033[1;31m"
YS="\033[1;33m"
N="\033[1;37m"

if [[ $EUID -ne 0 ]]
then
   sleep 1
   echo -e "["$RS"*"$CE"] "$RS"This script must be run as "$YS"root"$RS"!"$CE"" 1>&2
   sleep 1
   exit
fi

if [[ $1 = "--help" || $1 = "-h" ]]
then
echo -e "Usage: ehtkey [OPTION...]"
echo -e "Copyright (C) 2015, Entynetproject. All Rights Reserved."
echo -e
echo -e "   -c  --change <old_key> <new_key>  Change hacktestkit config key."
echo -e "   -h  --help                        Give this help list."
exit

elif [[ $1 = "--change" || $1 = "-c" ]]
then
if [[ $2 = "" ]]
then
echo -e "Usage: ehtkey $1 <old_key> <new_key>"
exit
fi
if [[ $3 = "" ]]
then
echo -e "Usage: ehtkey $1 <old_key> <new_key>"
exit
fi
if [[ $2 != "$(cat /root/hacktestkit/etc/.config)" ]]
then
sleep 2
echo -e "Error, incorrect old hacktestkit config key!"
sleep 2
exit
else
sleep 2
{
cd /root/hacktestkit/lib
chmod +x libdec
./libdec
cd /root/hacktestkit/lib
chmod +x libunconf
./libunconf
rm /etc/hacktestkit/.config
rm /root/hacktestkit/etc/.config
echo "$3" >> /root/hacktestkit/etc/.config
cd /root/hacktestkit/lib
chmod +x libconf
./libconf
cd /root/hacktestkit/lib
chmod +x libenc
./libenc
cd /root
} &> /dev/null
echo -e "Success, hacktestkit config key changed!"
sleep 0.5
echo -e "New hacktestkit config key: $3"
sleep 2
exit
fi
fi

echo -e "Usage: ehtkey [OPTION...]"
echo -e "Copyright (C) 2015, Entynetproject. All Rights Reserved."
echo -e
echo -e "   -c  --change <old_key> <new_key>  Change hacktestkit config key."
echo -e "   -h  --help                        Give this help list."
exit
